<h4><%=@category.name%></h4>


<h5>Ideas associated to this Category</h5>

<%@category.ideas.each do |idea|%>
  <a href="/ideas/<%=idea.id%>"><%=idea.content%> - <%=idea.user.username%></a>
  <br>
<% end %>
<br>

<a href="/categories/<%=@category.id%>/edit">Edit Category</a>

<form class="" action="/categories/<%=@category.id%>/delete" method="post">
  <input type="hidden" id="hidden" name="_method" value="delete">

  <input type="submit" value="Remove Category">
</form>
